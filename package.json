{
  "name": "smithers",
  "version": "0.2.5",
  "author": {
    "name": "Robin Malfait",
    "email": "malfait.robin@gmail.com"
  },
  "repository": "SmithersAssistant/smithers",
  "description": "Your personal assistant",
  "dependencies": {
    "aphrodite": "^0.5.0",
    "classnames": "^2.2.5",
    "co": "^4.6.0",
    "color": "^0.11.3",
    "lodash": "^4.13.1",
    "material-ui": "^0.15.0",
    "mkdirp": "^0.5.1",
    "npminstall": "^2.1.0",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-redux": "^4.4.5",
    "react-sortable-hoc": "0.0.6",
    "react-tap-event-plugin": "^1.0.0",
    "redux": "^3.5.2",
    "rimraf": "^2.5.4",
    "uuid": "^2.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-plugin-transform-react-display-name": "^6.5.0",
    "babel-plugin-transform-regenerator": "^6.14.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "cross-env": "^2.0.0",
    "css-loader": "^0.24.0",
    "electron-builder": "^5.14.2",
    "electron-prebuilt": "^1.2.8",
    "eslint": "^3.0.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "expect": "^1.18.0",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "react-hot-loader": "^1.3.0",
    "standard": "^8.0.0",
    "standard-loader": "^5.0.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-node-externals": "^1.3.3"
  },
  "build": {
    "appId": "com.robinmalfait.smithers",
    "category": "app-category-type=public.app-category.developer-tools"
  },
  "scripts": {
    "clean": "./npm_scripts/clean.sh",
    "tag:create": "node ./npm_scripts/createTag.js",
    "sync:dependencies": "node ./npm_scripts/syncPackageJson.js",
    "dev": "npm run clean && cross-env NODE_ENV=development webpack --watch",
    "build": "npm run clean && npm run sync:dependencies && cross-env NODE_ENV=production webpack",
    "pretest": "standard ./src/**/*.js",
    "test": "cross-env NODE_ENV=production ./node_modules/.bin/mocha './tests/**/*.spec.js' --compilers js:babel-core/register",
    "test:watch": "npm test -- --watch",
    "start": "cross-env NODE_ENV=development electron app",
    "postinstall": "install-app-deps",
    "pack": "npm run build && build -mwl --dir && babel --no-comments --compact --minified --out-file app/dist/bundle.js app/dist/bundle.js",
    "dist": "npm run build && build -mwl",
    "release": "npm run build && npm run tag:create && build -m --publish=always"
  }
}
